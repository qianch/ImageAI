@page
@model ImageAI.Pages.Faces.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Face</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Face.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Face.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Face.ImgSize)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Face.ImgSize)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Face.ImgContent)
        </dt>
        <dd>
            <img alt="@Html.DisplayFor(model => model.Face.Title)" src="data:@Html.DisplayFor(model => model.Face.ImgType);base64,@Html.DisplayFor(model => model.Face.ImgContent)" style="max-width:800px;" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Face.Data)
        </dt>
        <dd>
            <textarea class="textarea" readonly="readonly" style="width:800px;height:800px;background-color:ghostwhite">@Html.DisplayFor(model => model.Face.Data)</textarea>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Face.UploadDT)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Face.UploadDT)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts{
    <script type="text/javascript">
        var textarea = $(".textarea");
        textarea.each(function () {
            var current = $(this);
            current.height(current.scroll().context.scrollHeight);
        });
    </script>
}
