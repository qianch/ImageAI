@page
@model ImageSearch.Web.Pages.Identitys.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>身份识别</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="IdentitySingle.Name" class="control-label"></label>
                <input asp-for="IdentitySingle.Name" type="text" class="form-control" value="徐旻"/>
                <span asp-validation-for="IdentitySingle.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentitySingle.CardNO" class="control-label"></label>
                <input asp-for="IdentitySingle.CardNO" type="text" class="form-control" value="310104198008072018" />
                <span asp-validation-for="IdentitySingle.CardNO" class="text-danger"></span>
            </div>
            <input type="submit" value="查询" class="btn btn-default" />
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identity[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identity[0].CardNO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identity[0].Result)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Identity)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardNO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
