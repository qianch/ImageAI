@page
@model DetailModel

@{
    ViewData["Title"] = "Detail";
}

<h2>Detail</h2>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Car.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car.ImgSize)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car.ImgSize)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car.ImgContent)
        </dt>
        <dd>
            <img alt="@Html.DisplayFor(model => model.Car.Title)" src="data:@Html.DisplayFor(model => model.Car.ImgType);base64,@Html.DisplayFor(model => model.Car.ImgContent)" style="max-width:800px;" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car.ImgType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car.ImgType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car.Data)
        </dt>
        <dd>
            <textarea class="textarea" readonly="readonly" style="width:800px;background-color:ghostwhite">@Html.DisplayFor(model => model.Car.Data)</textarea>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Car.UploadDT)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Car.UploadDT)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
<script type="text/javascript">
    var textarea = document.getElementsByClassName("textarea");
    for (var i = 0; i < textarea.length; i++) {
        var current = textarea[i];
        current.style.height = current.scrollHeight + "px";
    }
</script>
